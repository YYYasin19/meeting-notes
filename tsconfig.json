{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "build",
    "noEmitOnError": true,
    "typeRoots": ["node_modules/@types"],
    "allowJs": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
